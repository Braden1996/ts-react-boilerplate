{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "storybook/**/*.js",
      "config/**/*.js",
      "internal/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "jsx-boolean-value": false,
    "object-literal-sort-keys": false,
    "semicolon": [true, "always"],
    "import-name": false,
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"]
  }
}
