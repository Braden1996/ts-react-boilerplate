{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "baseUrl": "src",
    "typeRoots": [
      "./src/typings/",
      "./node_modules/@types"
    ],
    "paths": {
      "@atoms": ["components/atoms/index.tsx"],
      "@atoms/*": ["components/atoms/*"],
      "@molecules": ["components/molecules/index.tsx"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms": ["components/organisms/index.tsx"],
      "@organisms/*": ["components/organisms/*"],
      "@templates": ["components/templates/index.tsx"],
      "@templates/*": ["components/templates/*"],
      "@pages": ["components/pages/index.tsx"],
      "@pages/*": ["components/pages/*"],
      "@theme": ["config/theme/index.tsx"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    ".storybook",
    "internal",
    "config-overrides.js"
  ]
}
